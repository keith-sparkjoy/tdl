(page "index.html")

(defn todo-item [checked? text]
  (div (label (input :type "checkbox" :value checked?) text)))

(def items (cell [[true "Buy groceries"]
                  [true "Cook dinner"]
                  [nil "Wash dishes"]]))

(html
  (head
    (link :href "app.css" :rel "stylesheet"))
  (body
    (h1 "TODO List")
    (for-tpl [[checked? text] items]
             (todo-item checked? text))))
